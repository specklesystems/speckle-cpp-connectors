	#For many add-ons, the display name is the same as the base name
if ( !($?DISPLAY_NAME) ) then
	setenv DISPLAY_NAME $BASE_NAME
endif
if ( $CONFIGURATION == "Release" ) then
	#strip -x "$SYMROOT/$CONFIGURATION/$PRODUCT_NAME.$WRAPPER_EXTENSION/Contents/MacOS/$PRODUCT_NAME"
	mkdir -p "$INSTALLER_PATH"
	cd "$INSTALLER_PATH/../"
	rm -r -f "$INSTALLER_FOLDER/"
	rm -r -f "$INSTALLER_FOLDER.dmg"
	mkdir -p "$INSTALLER_PATH"
	cp -R "$SYMROOT/$CONFIGURATION/$PRODUCT_NAME.$WRAPPER_EXTENSION" "$INSTALLER_PATH/$DISPLAY_NAME.$WRAPPER_EXTENSION"
	cd "$INSTALLER_PATH"
	mv "$DISPLAY_NAME.$WRAPPER_EXTENSION/Contents/MacOS/$PRODUCT_NAME" "$DISPLAY_NAME.$WRAPPER_EXTENSION/Contents/MacOS/$DISPLAY_NAME"
	cd ../
	hdiutil create "$INSTALLER_FOLDER.dmg" -srcfolder "$INSTALLER_FOLDER"
	if ( $LOCALISATION_SUFFIX == "EN-GB" ) then
		rm -r -f "$EXEC_PATH/$PLUGIN_FOLDER/$DISPLAY_NAME.$WRAPPER_EXTENSION"
		cp -R "$INSTALLER_PATH/$DISPLAY_NAME.$WRAPPER_EXTENSION" "$EXEC_PATH/$PLUGIN_FOLDER"
	endif
else
	if ( $LOCALISATION_SUFFIX == "EN-GB" ) then
		rm -r -f "$EXEC_PATH/$PLUGIN_FOLDER/$DISPLAY_NAME.$WRAPPER_EXTENSION"
		cp -R "$SYMROOT/$CONFIGURATION/$PRODUCT_NAME.$WRAPPER_EXTENSION" "$EXEC_PATH/$PLUGIN_FOLDER/$DISPLAY_NAME.$WRAPPER_EXTENSION"
	endif
endif
